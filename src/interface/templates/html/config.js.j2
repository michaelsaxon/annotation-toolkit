// Configuration
const CONFIG = {
    title: '{{ config.title }}',
    description: '{{ config.description }}',
    baseUrl: '{{ input.iterator.config.base_url | default("") }}',
    imageSource: '{{ input.iterator.variables.image_source | default("") }}',
    randomize: {{ input.iterator.randomize | default(false) | tojson }},
    pattern: '{{ input.iterator.config.pattern | default("") }}'
};

// Questions
const QUESTIONS = [
    {% for question in questions %}
    {
        id: '{{ question.id }}',
        text: '{{ question.text }}',
        required: {{ question.required | tojson }},
        config: {
            display_type: '{{ question.config.display_type }}',
            show_labels: {{ question.config.show_labels | tojson }},
            min: {{ question.config.min }},
            max: {{ question.config.max }},
            step: {{ question.config.step }},
            labels: {{ question.config.labels | tojson }}
        }
    }{% if not loop.last %},{% endif %}
    {% endfor %}
];

// Display configuration
const DISPLAY = {
    background_color: '{{ display.config.background_color | default("#ffffff") }}',
    container_width: '{{ display.config.container_width | default("800px") }}',
    image_position: '{{ display.config.image_position | default("top") }}',
    image_size: '{{ display.config.image_size | default("max-width: 100%") }}',
    question_spacing: '{{ layout.config.question_spacing | default("20px") }}'
}; 